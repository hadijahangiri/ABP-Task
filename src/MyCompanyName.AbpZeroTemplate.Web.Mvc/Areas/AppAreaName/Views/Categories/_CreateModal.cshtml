@using MyCompanyName.AbpZeroTemplate.Shop.Categories
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Common.Modals

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewCategory")))

<div class="modal-body" id="CreateCategoryInformationsForm">
    <form name="CategoryInformationsForm">
       

        <div class="mb-5 no-hint">
            <label for="Name" class="form-label required">@L("Name")</label>
            <input id="Name" type="text" name="Name" class="form-control" required maxlength="@CategoryConsts.MaxNameLength">
        </div>
      
    </form>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
