@using MyCompanyName.AbpZeroTemplate.Authorization
@{
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/AppAreaName/Views/_Bundles/product-index-libs.js" asp-append-version="true"></script>
}

<abp-page-subheader title="@L("Products")" description="@L("ProductsHeaderInfo")">
    @if (IsGranted(AppPermissions.Pages_Shop_Products_Create))
    {
        <button id="CreateNewProductButton" class="btn btn-primary">
            <i class="fa fa-plus btn-md-icon"></i>
            <span class="d-none d-md-inline-block">
                @L("CreateNewProduct")
            </span>
        </button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card">
        <div class="card-body">
            <div class="form">
                <div id="ProductsFormFilter">
                    <div class="row mb-4">
                        <div class="col-xl-6">
                            <label for="ProductsTableFilter" class="form-label">@L("ProductName")</label>
                            <div class="input-group">
                                <input id="ProductsTableFilter" class="form-control" type="text" value="@ViewBag.FilterText" placeholder="@L("SearchWithThreeDot")" aria-describedby="basic-addon2">
                                <button id="GetProductsButton" class="btn btn-primary" type="submit">
                                    <i class="flaticon-search-1" aria-label="@L("Search")"></i>
                                </button>
                            </div>
                        </div>
                        @*    <div class="col-xl-6">
                            <label for="EditionDropdown" class="form-label">@L("Edition")</label>
                            @Html.DropDownList("EditionDropdown", Model.EditionItems.Select(i => i.ToSelectListItem()), new { @class = "form-select edited" })
                        </div> *@
                    </div>

                    <div class="row mb-4">
                        <div class="col-xl-12 text-end">
                            <button name="RefreshButton" class="btn btn-primary float-end">
                                <i class="fa fa-sync btn-md-icon"></i>
                                <span class="d-none d-md-inline-block">
                                    @L("Refresh")
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="align-items-center">
                <table id="ProductsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable dtr-inline no-footer">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@L("Actions")</th>
                            <th>@L("Name")</th>
                            <th>@L("Price")</th>
                            <th>@L("CreationTime")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
